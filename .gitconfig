[user]
	name = Rimenes Ribeiro
	email = eu@rimenes.net
[core]
	editor = mate -w
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto
[github]
	user = rimenes
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	unstage = reset HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset - %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
